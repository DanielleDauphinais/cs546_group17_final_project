  <body>
    <h1>Update User Profile</h1>
    <form action="/users/edit/{{updateUser._id}}" method="POST" id="update-form">
      <label for="userNameInput">Username:</label>
      <input type="text" id="userNameInput" name="userNameInput" value="{{updateUser.userName}}" required>
      <br><br>
      <label for="firstNameInput">First Name:</label>
      <input type="text" id="firstNameInput" name="firstNameInput" value="{{updateUser.firstName}}" required>
      <br><br>
      <label for="lastNameInput">Last Name:</label>
      <input type="text" id="lastNameInput" name="lastNameInput" value="{{updateUser.lastName}}" required>
      <br><br>
      <label for="emailAddressInput">Email:</label>
      <input type="email" id="emailAddressInput" name="emailAddressInput" value="{{updateUser.emailAddress}}" required>
      <br><br>
      <label for="ageInput">Age:</label>
      <input type="number" id="ageInput" name="ageInput" min="0" max="120" value={{updateUser.age}} required>
      <div class="confirm-changes">
        <br>
        <label for="passwordInput">Enter Password to Confirm Changes:</label>
        <input type="password" id="passwordInput" name="passwordInput">
      </div>
      <br><br>
      <span id="error" class="error">{{{error}}}</span>
      <br><br>
      <input type="submit" value="Update Profile">
    </form>
    <div class="confirm-changes">
      <br>
      <button id="cancel-changes">Cancel</button>
    </div>
    <script src="/public/js/login.js" type="module"></script>
  </body>