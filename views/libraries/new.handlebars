{{!-- need to connect to the backend and check using front end JS --}}
<div class="newLibrary">
  <div id="leftSide">
<article>
  <h1>Create a Library</h1>
  <form action="/libraries" method="POST" id="new-Library-form" class="new-Library-form" enctype="multipart/form-data">
    <label>
      Library Name
      <input type="text" id="libraryName" name="name" placeholder="Library Name" value="{{library.title}}" class="half-width-input" />
    </label>

    <p class="bold">Please use the map on the left to select a location for your Little Free Library!</p>
    {{!-- These location data are text input because it gets mad about not integers  --}}
    <label for="lat">
      Library Latitude
    </label>
    <input type="text" id="lat" name="lat" placeholder="Librarys Latitude" value="{{library.lat}}" class="half-width-input" />
    
    <label for="lng">
      Library Longitude
    </label>
    <input type="text" id="lng" name="lng" placeholder="Librarys Longitude" value="{{library.lng}}" class="half-width-input" />

    <label for="library-image">
      Library image
    </label>
    <input type="file" id="library-image" name="image" placeholder="Library image" value="{{library.image}}" class="half-width-input" />
        
    {{!-- This is to get data on the fullness --}}
    <label for="fullness">
      Please select how full the library is, 0 being empty and 5 being full
    </label>
    <select class="half-width-input" name="fullness">
      <option value="">Fullness is...</option>
      <option value="0">0</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <p>Please select the genres of books currently present in the library</p>
      <div>
        <label for="Picture Books">
          <input type="checkbox" id="pictureBooks" />Picture Books</label>
        <label for="Young Adult Fiction">
          <input type="checkbox" id="youngAdultFiction" />Young Adult Fiction</label>
        <label for="Fantasy Fiction">
          <input type="checkbox" id="fantasyFiction" />Fantasy Fiction</label>
        <label for="Fairy tale">
          <input type="checkbox" id="fairyTale" />Fairy Tale</label>
        <label for="Board book">
          <input type="checkbox" id="boardBook" />Board Book</label>
        <label for="Non-fiction">
          <input type="checkbox" id="nonFiction" />Non-fiction</label>
        <label for="Mystery">
          <input type="checkbox" id="mystery" />Mystery</label>
        <label for="Graphic novel">
          <input type="checkbox" id="graphicNovel" />Graphic Novel</label>
        <label for="Chapter Book">
          <input type="checkbox" id="chapterBooks" />Chapter Book</label>
      </div>

    <button type="submit">Create New Post</button>
    <button type="reset">Clear Form</button>
  </form>
  {{!-- front end js error --}}
  <ul id="error" class="error" hidden></ul>
  {{!-- backend js errors --}}
  {{#if hasErrors}}
  <ul class="error-list">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}

</div>
  {{!-- This part shits itself --}}
  <div id="rightSide">
    <iframe src="/selectLocation" frameborder="0" class="gmaps"></iframe>
  </div>
  <script src="/public/js/library/new.js" type="module"></script>


</article>
</div>